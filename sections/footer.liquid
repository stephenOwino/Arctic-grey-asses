<style>
@import url('https://fonts.googleapis.com/css2?family=Rubik:wght@400;600&display=swap');

/* Base Styles */
.site-footer {
  background: #F9FAFB;
  font-family: 'Rubik', Arial, Helvetica, sans-serif;
  color: #374151;
  width: 100vw;
  overflow-x: hidden;
  padding-top: 32px;
}
.page-width {
