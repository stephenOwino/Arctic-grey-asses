  - Fully responsive and customizable via the Shopify Theme Editor
{% endcomment %}

<footer class="site-footer">
  <div class="page-width">
    <div class="footer__content">
      <div class="footer-grid">
        
        <!-- Newsletter Section -->
        <div class="footer-grid__item footer-grid__item--newsletter">
          {% if section.settings.newsletter_heading != blank %}
            <h4 class="footer__heading">{{ section.settings.newsletter_heading }}</h4>
          {% endif %}
          {% if section.settings.newsletter_subheading != blank %}
            <p class="footer__text">{{ section.settings.newsletter_subheading }}</p>
          {% endif %}
          
          {%- form 'customer', id: 'ContactFooter', class: 'footer__newsletter-form' -%}
            <input type="hidden" name="contact[tags]" value="newsletter">
            <div class="newsletter-form__field-wrapper">
              <input
                id="NewsletterForm--{{ section.id }}"
                type="email"
                name="contact[email]"
                class="newsletter-form__input"
                value=""
                aria-required="true"
                autocorrect="off"
                autocapitalize="off"
                autocomplete="email"
                placeholder="{{ 'general.newsletter_form.email_placeholder' | t }}"
              >
              <button type="submit" class="newsletter-form__button" name="commit">
                {{ 'general.newsletter_form.subscribe' | t }}
              </button>
            </div>
          {%- endform -%}
        </div>

        <!-- About Us Column -->
        <div class="footer-grid__item">
          <h4 class="footer__heading">{{ section.settings.menu_title_1 }}</h4>
          <ul class="footer__linklist">
            {%- if section.settings.about_blog_link != blank -%}
              <li><a href="{{ section.settings.about_blog_link }}">Blog</a></li>
            {%- endif -%}
            {%- if section.settings.about_product_reviews_link != blank -%}
              <li><a href="{{ section.settings.about_product_reviews_link }}">Product Reviews</a></li>
            {%- endif -%}
            {%- if section.settings.about_our_story_link != blank -%}
              <li><a href="{{ section.settings.about_our_story_link }}">Our Story</a></li>
            {%- endif -%}
            {%- if section.settings.about_delivery_link != blank -%}
              <li><a href="{{ section.settings.about_delivery_link }}">Delivery</a></li>
            {%- endif -%}
          </ul>
        </div>

        <!-- Support Column -->
        <div class="footer-grid__item">
          <h4 class="footer__heading">{{ section.settings.menu_title_2 }}</h4>
          <ul class="footer__linklist">
            {%- if section.settings.support_order_status_link != blank -%}
              <li><a href="{{ section.settings.support_order_status_link }}">Order Status</a></li>
            {%- endif -%}
            {%- if section.settings.support_help_center_link != blank -%}
              <li><a href="{{ section.settings.support_help_center_link }}">Help Center</a></li>
            {%- endif -%}
            {%- if section.settings.support_contact_us_link != blank -%}
              <li><a href="{{ section.settings.support_contact_us_link }}">Contact Us</a></li>
            {%- endif -%}
            {%- if section.settings.support_returns_link != blank -%}
              <li><a href="{{ section.settings.support_returns_link }}">Returns</a></li>
            {%- endif -%}
          </ul>
        </div>

        <!-- Important Link Column -->
        <div class="footer-grid__item">
          <h4 class="footer__heading">{{ section.settings.menu_title_3 }}</h4>
          <ul class="footer__linklist">
            {%- if section.settings.important_maintenance_link != blank -%}
