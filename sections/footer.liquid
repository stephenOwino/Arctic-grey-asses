            {%- endif -%}
            {%- if section.settings.important_setup_link != blank -%}
              <li><a href="{{ section.settings.important_setup_link }}">Setup</a></li>
            {%- endif -%}
          </ul>
        </div>

        <!-- Legal Column -->
        <div class="footer-grid__item">
          <h4 class="footer__heading">{{ section.settings.menu_title_4 }}</h4>
          <ul class="footer__linklist">
            {%- if section.settings.legal_privacy_policy_link != blank -%}
