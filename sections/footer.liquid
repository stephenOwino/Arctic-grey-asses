  font-size: 12px;
  color: #9CA3AF;
  flex-wrap: wrap;
  gap: 12px;
  width: 100%;
  text-align: left;
}

/* ========== Responsive Styles ========== */

/* Extra small screens (250px and up) */
@media screen and (max-width: 400px) {
  .page-width { padding: 0 4vw; }
  .footer__bottom { min-height: 56px; }
  .footer__attribution.footer__attribution--bottom { right: 4vw; }
}

@media screen and (max-width: 900px) {
  .footer-grid {
    grid-template-columns: 1fr 1fr 1fr;
    gap: 18px 14px;
  }
  .footer-grid__item--newsletter {
    grid-column: 1 / -1;
    max-width: 100%;
  }
  .footer-grid__item--contact {
    grid-column: 1 / -1;
    margin-top: 10px;
  }
}

@media screen and (max-width: 600px) {
  .site-footer { padding-top: 16px;}
  .page-width { padding: 0 3vw;}
  .footer__content { padding-bottom: 14px;}
  .footer-grid {
    grid-template-columns: 1fr;
    gap: 18px 0;
    width: 100%;
  }
  .footer-grid__item {
    width: 100%;
    min-width: 0;
    max-width: 100%;
    margin-bottom: 0;
    padding-bottom: 0;
    border-bottom: 1px solid #f3f4f6;
  }
  .footer-grid__item:last-child { border-bottom: none; }
  .footer__heading,
  .footer__heading--social { font-size: 16px; }
  .footer__text { font-size: 12px;}
  .footer__linklist a { font-size: 12px;}
  .contact-info__phone { font-size: 14px;}
  .newsletter-form__field-wrapper {
    flex-direction: column;
    width: 100%;
    height: auto;
  }
  .newsletter-form__input,
  .newsletter-form__button {
    width: 100%;
    min-width: 0;
    box-sizing: border-box;
    border-radius: 8px;
    height: 40px;
    font-size: 13px;
  }
  .newsletter-form__button { margin-top: 2px;}
  .footer__bottom-content {
    font-size: 11px;
    flex-direction: column;
    gap: 4px;
    padding: 0;
    text-align: left;
    justify-content: flex-start;
    align-items: flex-start;
  }
  .footer__social-icons-wrap { width: 100%; margin-bottom: 8px; }
  .footer__social-icons { gap: 12px;}
  .footer__attribution.footer__attribution--bottom {
    position: static;
    margin-top: 4px;
    right: 0;
    left: 0;
    bottom: 0;
    background: none;
  }
}

/* Smallest size: stack, readable, no horizontal scroll from 250px */
@media screen and (max-width: 350px) {
  .page-width { padding: 0 2vw; }
  .footer__bottom { min-height: 64px; }
  .footer__attribution.footer__attribution--bottom { right: 2vw; font-size: 11px; }
}

/* Prevent horizontal scroll on *all* screens */
.site-footer, .page-width, .footer-grid, .footer__bottom-content {
  box-sizing: border-box;
  width: 100vw;
  max-width: 100vw;
  overflow-x: hidden;
}
</style>
