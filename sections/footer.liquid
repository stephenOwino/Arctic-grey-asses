  width: 100%;
  box-sizing: border-box;
}
.footer__content {
  border-bottom: 1px solid #E5E7EB;
  padding-bottom: 24px;
}
.footer-grid {
  display: grid;
  grid-template-columns: 2fr 1fr 1fr 1fr 1fr 1.2fr;
  gap: 14px 36px;
  align-items: start;
  width: 100%;
}
.footer-grid__item {
  min-width: 0;
}
.footer__heading,
.footer__heading--social {
  font-family: 'Rubik', Arial, Helvetica, sans-serif;
  font-weight: 600;
  font-size: 18px;
  line-height: 1.2;
  letter-spacing: 0;
  color: #1B1F23;
  margin: 0 0 12px 0;
  word-break: break-word;
}
.footer__heading--social {
  margin-top: 18px;
  margin-bottom: 10px;
  font-size: 16px;
}
.footer__text {
  font-size: 13px;
  color: #6B7280;
  margin: 0 0 14px 0;
  line-height: 1.4;
  max-width: 100%;
  word-break: break-word;
  font-family: 'Rubik', Arial, Helvetica, sans-serif;
}
.footer__text--contact {
  margin-bottom: 10px;
}
.footer-grid__item--newsletter {
  max-width: 370px;
}
.footer__newsletter-form { width: 100%; }
.newsletter-form__field-wrapper {
  display: flex;
  width: 368px;
  height: 50px;
  background: transparent;
  gap: 0;
}
.newsletter-form__input {
  flex: 1;
  height: 100%;
  padding: 0 14px;
  font-size: 14px;
  color: #111827;
  background: #fff;
  border: 1px solid #D1D5DB;
  border-right: none;
  border-radius: 8px 0 0 8px;
  outline: none;
  min-width: 0;
  font-family: 'Rubik', Arial, Helvetica, sans-serif;
}
.newsletter-form__input::placeholder { color: #9CA3AF;}
.newsletter-form__input:focus {
  border-color: #3B82F6;
  box-shadow: 0 0 0 1px #3B82F6;
}
.newsletter-form__button {
  height: 100%;
  padding: 0 22px;
  font-size: 14px;
  font-weight: 500;
  color: #fff;
  background: #111827;
  border: 1px solid #111827;
