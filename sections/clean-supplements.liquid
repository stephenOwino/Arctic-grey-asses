        {
          "type": "feature",
          "settings": {
            "icon": "made-for-you-icon.svg",
            "title": "Made For You",
            "description": "Performance is Personal. Personalized & Customizable Products For Your Needs, Body & Goals"
          }
        }
      ]
    }
  ]
}
{% endschema %}