{%- comment -%}
  Featured Logos Section
{%- endcomment -%}

<style>
  /* Featured logos section */
  .featured-logos {
    background-color: #F8F8F8;
    width: 1600px;
    height: 118px;
    position: relative;
    margin: 0 auto;
  }

  .featured-logos__container {
    position: relative;
    width: 100%;
    height: 100%;
  }

  .featured-logos__left {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    gap: 12px;
    position: absolute;
    width: 284px;
    height: 70px;
    top: 24px;
    left: 40px;
  }

  .featured-logos__title {
    text-align: center;
    font-family: 'Rubik', sans-serif;
    font-weight: 700;
    font-size: 14px;
    color: #000000;
    background-color: #E4E4E4;
    display: inline-block;
    padding: 8px 16px;
    border-radius: 30px;
    margin: 0 auto 20px;
  }

  .featured-logos__rating {
    display: flex;
    align-items: center;
    gap: 8px;
    width: 284px;
    height: 20px;
  }

  .doctor-recommended {
    display: flex;
    align-items: center;
  }

  .badge {
    font-family: 'Rubik', sans-serif;
    font-weight: 500;
    font-size: 14px;
    line-height: 100%;
    letter-spacing: 0%;
    color: #1B1F23;
    background-color: #F2F2F2;
    padding: 14px;
    border-radius: 8px;
    border: 1px solid #E4E4E4;
    width: 198px;
    height: 38px;
    box-sizing: border-box;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .featured-logos__stars {
    display: flex;
    color: #FFB800;
  }

  .featured-logos__star {
    width: 16px;
    height: 16px;
  }

  .featured-logos__reviews {
    font-family: 'Rubik', sans-serif;
    font-size: 14px;
    color: #1B1F23;
  }

  .featured-logos__grid {
    display: flex;
    justify-content: space-between;
    align-items: center;
    position: absolute;
    width: 1016px;
    height: 40px;
    top: 39px;
    left: 519px;
    gap: 8px;
  }

  .featured-logos__item {
    width: 120px;
    height: 40px;
    object-fit: contain;
  }

  @media screen and (max-width: 1600px) {
    .featured-logos {
      width: 100%;
      max-width: 1600px;
    }
  }

  @media screen and (max-width: 1200px) {
    .featured-logos__left {
      position: static;
      margin: 20px auto;
      align-items: center;
    }
    
    .featured-logos__grid {
      position: static;
      width: 100%;
      margin: 20px auto;
      justify-content: center;
      flex-wrap: wrap;
      gap: 15px;
    }
    
    .featured-logos__container {
      display: flex;
      flex-direction: column;
      align-items: center;
      padding: 20px;
    }
  }

  @media screen and (max-width: 768px) {
    .featured-logos {
      height: auto;
      min-height: 118px;
    }
    
    .featured-logos__left {
      width: 100%;
      max-width: 284px;
      height: auto;
    }
    
    .featured-logos__grid {
      gap: 10px;
    }
    
    .featured-logos__item {
      width: 100px;
      height: 35px;
    }
  }

  @media screen and (max-width: 480px) {
    .featured-logos__left {
      gap: 8px;
    }
    
    .badge {
      width: 100%;
      max-width: 198px;
      height: auto;
      min-height: 38px;
      padding: 12px;
      font-size: 13px;
    }
    
    .featured-logos__rating {
      width: 100%;
      max-width: 284px;
      height: auto;
      justify-content: center;
    }
    
    .featured-logos__grid {
      gap: 8px;
    }
    
    .featured-logos__item {
      width: 80px;
      height: 30px;
    }
  }

  @media screen and (max-width: 320px) {
    .featured-logos__container {
      padding: 15px;
    }
    
    .badge {
      font-size: 12px;
      padding: 10px;
    }
    
    .featured-logos__reviews {
      font-size: 13px;
    }
    
    .featured-logos__grid {
      gap: 6px;
    }
    
    .featured-logos__item {
      width: 70px;
      height: 28px;
    }
  }

  @media screen and (max-width: 250px) {
    .featured-logos__container {
      padding: 10px;
    }
    
    .featured-logos__left {
      gap: 6px;
    }
    
    .badge {
      font-size: 11px;
      padding: 8px;
      width: 100%;
    }
    
    .featured-logos__rating {
      flex-direction: column;
      gap: 4px;
      align-items: center;
    }
    
    .featured-logos__reviews {
      font-size: 12px;
      text-align: center;
    }
    
    .featured-logos__grid {
      gap: 4px;
      justify-content: center;
    }
    
    .featured-logos__item {
      width: 60px;
      height: 25px;
    }
    
    .featured-logos__star {
      width: 14px;
      height: 14px;
    }
  }
</style>

<!-- Featured Logos Section -->
<section class="featured-logos">
  <div class="featured-logos__container">
    <div class="featured-logos__left">
      <div class="doctor-recommended">
        <span class="badge">{{ section.settings.badge_text }}</span>
      </div>
      <div class="featured-logos__rating">
        <div class="featured-logos__stars">
          {% for i in (1..5) %}
            <svg class="featured-logos__star" viewBox="0 0 16 16" fill="none" xmlns="http://www.w3.org/2000/svg">
              <path d="M8 0L10.472 5.27L16 6.13L12 10.24L12.944 16L8 13.27L3.056 16L4 10.24L0 6.13L5.528 5.27L8 0Z" fill="currentColor"/>
            </svg>
          {% endfor %}
        </div>
        <span class="featured-logos__reviews">{{ section.settings.reviews_text }}</span>
      </div>
    </div>
    
    <div class="featured-logos__grid">
      {% for block in section.blocks %}
        {% if block.type == 'logo' %}
          <img src="{{ block.settings.logo | img_url: '120x' }}" alt="{{ block.settings.logo_alt }}" class="featured-logos__item">
        {% endif %}
      {% endfor %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Featured Logos",
  "settings": [
    {
      "type": "text",
      "id": "badge_text",
      "label": "Badge Text",
      "default": "#1 Doctor Recommended"
    },
    {
      "type": "text",
      "id": "reviews_text",
      "label": "Reviews Text",
      "default": "12,000+ 5-star Reviews"
    }
  ],
  "blocks": [
    {
      "type": "logo",
      "name": "Logo",
      "settings": [
        {
          "type": "image_picker",
          "id": "logo",
          "label": "Logo Image"
        },
        {
          "type": "text",
          "id": "logo_alt",
          "label": "Logo Alt Text",
          "info": "For accessibility purposes"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Featured Logos",
      "category": "Image",
      "blocks": [
        {
          "type": "logo"
        },
        {
          "type": "logo"
        },
        {
