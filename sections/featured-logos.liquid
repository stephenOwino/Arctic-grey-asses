{%- comment -%}
  Featured Logos Section
{%- endcomment -%}

<style>
  /* Featured logos section */
  .featured-logos {
    padding: 20px 0;
    background-color: #F8F8F8;
    width: 100%;
  }

  .featured-logos__container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .featured-logos__title {
    text-align: center;
    font-family: 'Rubik', sans-serif;
    font-weight: 700;
    font-size: 14px;
    color: #000000;
    background-color: #E4E4E4;
    display: inline-block;
    padding: 8px 16px;
    border-radius: 30px;
    margin: 0 auto 20px;
  }

  .featured-logos__rating {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 20px;
    margin: 20px 0;
  }

  .doctor-recommended {
    display: flex;
    align-items: center;
  }

  .badge {
    font-family: 'Rubik', sans-serif;
    font-weight: 600;
    font-size: 14px;
    color: #000000;
    background-color: #F2F2F2;
    padding: 8px 16px;
    border-radius: 30px;
    border: 1px solid #E4E4E4;
  }

  .featured-logos__stars {
    display: flex;
    color: #FFB800;
  }

  .featured-logos__star {
    width: 16px;
    height: 16px;
  }

  .featured-logos__reviews {
    font-family: 'Rubik', sans-serif;
    font-size: 14px;
    color: #1B1F23;
  }

  .featured-logos__grid {
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-wrap: wrap;
    gap: 20px;
    margin-top: 20px;
  }

  .featured-logos__item {
    max-height: 30px;
    max-width: 120px;
  }

  @media screen and (max-width: 768px) {
    .featured-logos__grid {
      justify-content: center;
    }
    
    .featured-logos__rating {
      flex-direction: column;
      gap: 10px;
    }
  }
</style>

<!-- Featured Logos Section -->
<section class="featured-logos">
  <div class="featured-logos__container">
    <div class="featured-logos__rating">
      <div class="doctor-recommended">
        <span class="badge">{{ section.settings.badge_text }}</span>
      </div>
      <div class="featured-logos__stars">
        {% for i in (1..5) %}
          <svg class="featured-logos__star" viewBox="0 0 16 16" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M8 0L10.472 5.27L16 6.13L12 10.24L12.944 16L8 13.27L3.056 16L4 10.24L0 6.13L5.528 5.27L8 0Z" fill="currentColor"/>
          </svg>
        {% endfor %}
      </div>
      <span class="featured-logos__reviews">{{ section.settings.reviews_text }}</span>
    </div>
    
    <div class="featured-logos__grid">
      {% for block in section.blocks %}
        {% if block.type == 'logo' %}
          <img src="{{ block.settings.logo | img_url: '120x' }}" alt="{{ block.settings.logo_alt }}" class="featured-logos__item">
        {% endif %}
      {% endfor %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Featured Logos",
  "settings": [
    {
      "type": "text",
      "id": "badge_text",
      "label": "Badge Text",
      "default": "#1 Doctor Recommended"
    },
    {
      "type": "text",
      "id": "reviews_text",
      "label": "Reviews Text",
      "default": "12,000+ 5-star Reviews"
    }
  ],
  "blocks": [
    {
      "type": "logo",
      "name": "Logo",
      "settings": [
        {
          "type": "image_picker",
          "id": "logo",
          "label": "Logo Image"
        },
        {
          "type": "text",
          "id": "logo_alt",
          "label": "Logo Alt Text",
          "info": "For accessibility purposes"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Featured Logos",
      "category": "Image",
      "blocks": [
        {
          "type": "logo"
        },
        {
          "type": "logo"
        },
        {
          "type": "logo"
        },
        {
          "type": "logo"
        },
        {
          "type": "logo"
        },
        {
          "type": "logo"
        }
      ]
    }
  ]
}
{% endschema %}