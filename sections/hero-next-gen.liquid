{% comment %}
  Hero Section - Next Generation Product Showcase
  Pixel-perfect, fully responsive, matches provided specs and screenshot !
  - Image size: 1520x750
  - Title, subtitle, and button specs per user
{% endcomment %}

{%- style -%}
.hero-next-gen {
  position: relative;
  width: 100%;
  max-width: 1520px;
  min-height: 750px;
  height: auto;
  margin: 40px auto 0 auto;
  border-radius: 16px;
  overflow: hidden;
  background: #000;
  display: flex;
  align-items: stretch;
  justify-content: center;
}

.hero-next-gen__background {
  position: absolute;
  top: 0; left: 0;
  width: 100%; height: 100%;
  object-fit: cover;
  object-position: center;
  z-index: 1;
  pointer-events: none;
  user-select: none;
  border-radius: 16px;
}

.hero-next-gen__overlay {
  position: absolute;
  top: 0; left: 0;
  width: 100%; height: 100%;
  background: linear-gradient(90deg, rgba(0,0,0,0.68) 0%, rgba(0,0,0,0.36) 45%, rgba(0,0,0,0.09) 100%);
  z-index: 2;
  pointer-events: none;
  border-radius: 16px;
}

.hero-next-gen__container {
  position: relative;
  z-index: 3;
  width: 100%;
  height: 100%;
  display: flex;
  align-items: flex-start;
  justify-content: flex-start;
  min-height: 750px;
  padding: 0;
  box-sizing: border-box;
}

.hero-next-gen__content {
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: flex-start;
  margin-left: 64px;
  margin-top: 120px;
  max-width: 700px;
  min-width: 0;
  color: #fff;
  font-family: 'Rubik', Arial, sans-serif;
  padding: 0;
  background: none;
}

.hero-next-gen__title {
  font-family: 'Rubik', Arial, sans-serif;
  font-weight: 600;
  font-size: 50px;
  line-height: 1.0;
  letter-spacing: 0;
  color: #fff;
  margin-bottom: 16px;
  text-shadow: 2px 2px 8px rgba(0,0,0,0.28);
  max-width: 683px;
  width: 100%;
  word-break: break-word;
}

.hero-next-gen__subtitle {
  font-family: 'Rubik', Arial, sans-serif;
  font-weight: 400;
  font-size: 16px;
  line-height: 1.0;
  letter-spacing: 0;
  color: #fff;
  margin-bottom: 38px;
  opacity: 1;
  text-shadow: 1px 1px 3px rgba(0,0,0,0.16);
  max-width: 480px;
  width: 100%;
}

.hero-next-gen__buttons {
  display: flex;
  gap: 20px;
  flex-wrap: wrap;
}

.hero-next-gen__btn {
  display: flex;
  align-items: center;
  justify-content: center;
  font-family: 'Rubik', Arial, sans-serif;
  font-weight: 500;
  font-size: 16px;
  line-height: 1.0;
  letter-spacing: 0;
  border-radius: 8px;
  min-width: 190px;
  height: 50px;
  padding: 10px 0;
  gap: 10px;
  cursor: pointer;
  transition: background 0.2s, color 0.2s, border-color 0.2s;
  box-sizing: border-box;
  outline: none;
  text-decoration: none;
  justify-content: center;
  border: none;
}

.hero-next-gen__btn--primary {
  background: #fff;
  color: #1B1F23;
  border: none;
}

.hero-next-gen__btn--primary:active,
.hero-next-gen__btn--primary:focus {
  background: #f3f3f3;
  color: #17191b;
}

.hero-next-gen__btn--secondary {
  background: transparent;
  color: #fff;
  border: 1px solid #fff;
}

.hero-next-gen__btn--secondary:active,
.hero-next-gen__btn--secondary:focus {
  background: rgba(255,255,255,0.13);
}

/* Tablet down: tighter margin/padding, smaller font, center if needed */
@media (max-width: 1100px) {
  .hero-next-gen {
    min-height: 540px;
    max-width: 100vw;
  }
  .hero-next-gen__container {
    min-height: 540px;
  }
  .hero-next-gen__content {
    margin-left: 32px;
    margin-top: 60px;
    max-width: 90vw;
  }
  .hero-next-gen__title { font-size: 40px; }
  .hero-next-gen__subtitle { font-size: 15px; }
}

@media (max-width: 800px) {
  .hero-next-gen {
    min-height: 400px;
    border-radius: 0;
  }
  .hero-next-gen__background,
  .hero-next-gen__overlay {
    border-radius: 0;
  }
  .hero-next-gen__container {
    min-height: 400px;
  }
  .hero-next-gen__content {
    margin-left: 18px;
    margin-top: 45px;
    max-width: 97vw;
  }
  .hero-next-gen__title { font-size: 26px; }
  .hero-next-gen__subtitle { font-size: 13px; }
  .hero-next-gen__btn {
    min-width: 130px;
    height: 38px;
    font-size: 13px;
    padding: 7px 0;
  }
}

/* Phone: stack everything, use full width, more compact spacing */
@media (max-width: 540px) {
  .hero-next-gen {
    min-height: 260px;
  }
  .hero-next-gen__container {
    min-height: 260px;
    padding: 0;
    justify-content: flex-start;
    align-items: flex-end;
  }
  .hero-next-gen__content {
    margin-left: 10px;
    margin-top: 22px;
    max-width: 99vw;
    padding: 0;
  }
  .hero-next-gen__title {
    font-size: 18px;
    margin-bottom: 8px;
    max-width: 95vw;
  }
  .hero-next-gen__subtitle {
    font-size: 11px;
    margin-bottom: 14px;
    max-width: 94vw;
  }
  .hero-next-gen__buttons {
    gap: 8px;
    flex-direction: column;
    width: 100%;
  }
  .hero-next-gen__btn {
    min-width: 0;
    width: 98vw;
    height: 32px;
    font-size: 12px;
    padding: 5px 0;
    border-radius: 7px;
  }
}

/* Prevent horizontal scroll on all screens */
.hero-next-gen, .hero-next-gen__container, .hero-next-gen__content {
  box-sizing: border-box;
  max-width: 100vw;
  overflow-x: hidden;
}
{%- endstyle -%}

<section class="hero-next-gen">
  {% if section.settings.background_image %}
    {{ section.settings.background_image | image_url: width: 1520, height: 750 | image_tag: loading: 'eager', alt: 'Hero background', class: 'hero-next-gen__background' }}
  {% else %}
    <img 
      src="{{ 'hero-next-generation.jpg' | asset_url }}" 
      alt="Hero background"
      class="hero-next-gen__background"
      loading="eager"
      width="1520"
      height="750"
    >
  {% endif %}
  
  <div class="hero-next-gen__overlay"></div>
  
  <div class="hero-next-gen__container">
    <div class="hero-next-gen__content">
      <h1 class="hero-next-gen__title">
        {{ section.settings.title | default: 'The Next Generation is Here' }}
      </h1>
      <p class="hero-next-gen__subtitle">
        {{ section.settings.subtitle | default: 'Innovative Engineering. Intelligent Design. Meet The Plunge All-I.' }}
      </p>
      <div class="hero-next-gen__buttons">
        <a href="{{ section.settings.primary_button_url | default: '#' }}" class="hero-next-gen__btn hero-next-gen__btn--primary">
          {{ section.settings.primary_button_text | default: 'Take The Plunge' }}
        </a>
        <a href="{{ section.settings.secondary_button_url | default: '#' }}" class="hero-next-gen__btn hero-next-gen__btn--secondary">
          {{ section.settings.secondary_button_text | default: 'Dive Deeper' }}
        </a>
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Hero - Next Generation",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Background Image"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "The Next Generation is Here"
    },
    {
      "type": "textarea",
      "id": "subtitle",
      "label": "Subtitle",
      "default": "Innovative Engineering. Intelligent Design. Meet The Plunge All-I."
    },
    {
      "type": "text",
      "id": "primary_button_text",
      "label": "Primary Button Text",
      "default": "Take The Plunge"
    },
    {
      "type": "url",
      "id": "primary_button_url",
      "label": "Primary Button URL"
    },
    {
      "type": "text",
      "id": "secondary_button_text",
      "label": "Secondary Button Text",
      "default": "Dive Deeper"
    },
    {
      "type": "url",
      "id": "secondary_button_url",
      "label": "Secondary Button URL"
    }
  ],
  "presets": [
    {
      "name": "Hero - Next Generation"
    }
  ]
}
{% endschema %}