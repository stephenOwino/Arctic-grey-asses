<style>
  .marquee {
    position: relative;
    width: 100%;
    background-color: #000000;
    overflow: hidden;
    display: flex;
    white-space: nowrap;
    padding: 16px 0;
  }

  .marquee__content {
    display: flex;
    align-items: center;
    gap: 40px;
    animation: marquee 60s linear infinite;
    width: max-content;
  }

  .marquee__item {
    display: flex;
    align-items: center;
    color: #FFFFFF;
    font-family: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif;
    font-weight: 500;
    font-size: 14px;
    flex-shrink: 0;
    white-space: nowrap;
    gap: 8px;
  }

  .marquee__icon {
    width: 16px;
    height: 16px;
    color: #fff;
    flex-shrink: 0;
  }

  @keyframes marquee {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(-25%);
    }
  }

  .marquee:hover .marquee__content {
    animation-play-state: paused;
  }

  @media (max-width: 768px) {
    .marquee {
      padding: 12px 0;
    }
    
    .marquee__content {
      gap: 30px;
      animation-duration: 45s;
    }
    
    .marquee__item {
      font-size: 12px;
    }
    
    .marquee__icon {
      width: 14px;
      height: 14px;
    }
  }

  @media (max-width: 480px) {
    .marquee {
      padding: 10px 0;
    }
    
    .marquee__content {
      gap: 25px;
      animation-duration: 35s;
    }
    
    .marquee__item {
      font-size: 11px;
    }
    
    .marquee__icon {
      width: 12px;
      height: 12px;
    }
  }

  @media (max-width: 320px) {
    .marquee {
      padding: 8px 0;
    }
    
    .marquee__content {
      gap: 20px;
      animation-duration: 30s;
    }
    
    .marquee__item {
      font-size: 10px;
    }
    
    .marquee__icon {
      width: 10px;
      height: 10px;
    }
  }

  @media (max-width: 250px) {
    .marquee {
      padding: 6px 0;
    }
    
    .marquee__content {
      gap: 15px;
      animation-duration: 25s;
    }
    
    .marquee__item {
      font-size: 9px;
    }
    
    .marquee__icon {
      width: 8px;
      height: 8px;
    }
  }
</style>

