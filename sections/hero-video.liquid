{%- comment -%}
  Hero Section with Video Background - Enhanced Responsive
{%- endcomment -%}

<style>
  /* Hero Video Section */
  .hero {
    position: relative;
    width: 100%;
    height: 0;
    padding-bottom: 57.5%; /* Default aspect ratio */
    overflow: hidden;
    min-height: 300px; /* Minimum height for very small screens */
  }

  .hero__video-container {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
  }

  .hero__video {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .hero__overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.3);
    display: flex;
    flex-direction: column;
    justify-content: flex-end;
    align-items: flex-start;
    padding: 4rem;
  }

  .hero__heading {
    font-family: 'Rubik', sans-serif;
    font-weight: 700;
    font-size: clamp(1.25rem, 5vw, 4rem); /* More conservative minimum */
    line-height: 1.1;
    color: #FFFFFF;
    margin-bottom: 1.5rem;
    max-width: 800px;
    text-shadow: 0 2px 4px rgba(0, 0, 0, 0.5); /* Better readability */
  }

  .hero__button {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    min-width: 140px;
    height: 48px;
    padding: 0 24px;
    font-family: 'Rubik', sans-serif;
    font-weight: 500;
    font-size: 16px;
    background-color: #FFFFFF;
    color: #000000;
    border-radius: 6px;
    text-decoration: none;
    transition: all 0.3s ease;
    margin-bottom: 2rem;
    touch-action: manipulation; /* Better touch performance */
  }

  .hero__button:hover {
    background-color: #F5F5F5;
  }

  /* Enhanced breakpoints for better responsiveness */

  /* Small tablets and large phones (481px - 767px) */
  @media screen and (max-width: 767px) and (min-width: 481px) {
    .hero {
      padding-bottom: 60%; /* Slightly taller on tablets */
    }
    
    .hero__overlay {
      padding: 3rem 2rem;
    }
    
    .hero__heading {
      font-size: clamp(1.5rem, 4.5vw, 3rem);
      margin-bottom: 1.25rem;
    }
    
    .hero__button {
      margin-bottom: 1.5rem;
    }
  }

  /* Mobile phones (250px - 480px) */
  @media screen and (max-width: 480px) {
    .hero {
      padding-bottom: 65%; /* Taller aspect ratio for mobile */
      min-height: 280px;
    }
    
    .hero__overlay {
      padding: 1.5rem 1rem;
      justify-content: center; /* Center content on very small screens */
      text-align: center;
      align-items: center;
    }
    
    .hero__heading {
      font-size: clamp(1.25rem, 6vw, 2.5rem);
      margin-bottom: 1rem;
      max-width: 100%;
    }
    
    .hero__button {
      width: 100%;
      max-width: 280px;
      height: 52px; /* Larger touch target */
      font-size: 18px;
      margin-bottom: 1rem;
    }
  }

  /* Very small screens (250px - 320px) */
  @media screen and (max-width: 320px) {
    .hero {
      padding-bottom: 70%;
      min-height: 250px;
    }
    
    .hero__overlay {
      padding: 1rem 0.75rem;
    }
    
    .hero__heading {
      font-size: clamp(1.125rem, 7vw, 2rem);
      line-height: 1.2;
    }
    
    .hero__button {
      font-size: 16px;
      height: 48px;
      min-width: 120px;
    }
  }

  /* Landscape orientation adjustments for mobile */
  @media screen and (max-height: 500px) and (orientation: landscape) {
    .hero {
      padding-bottom: 100%;
      min-height: 100vh;
    }
    
    .hero__overlay {
      justify-content: center;
      padding: 2rem;
    }
  }
</style>

<!-- Hero Video Section -->
<section class="hero">
  <div class="hero__video-container">
    <video class="hero__video" autoplay loop muted playsinline poster="{{ section.settings.poster | img_url: 'master' }}">
      {% if section.settings.video_mp4 != blank %}
        <source src="{{ section.settings.video_mp4 }}" type="video/mp4">
      {% endif %}
      Your browser does not support the video tag.
    </video>
  </div>
  
  <div class="hero__overlay">
    <h2 class="hero__heading">{{ section.settings.heading }}</h2>
    <a href="{{ section.settings.button_link }}" class="hero__button">{{ section.settings.button_label }}</a>
  </div>
</section>

{% schema %}
{
  "name": "Hero Video",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Great things never came from comfort zones."
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button Label",
      "default": "Shop Now"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link",
      "default": "/collections/all"
    },
    {
      "type": "header",
      "content": "Video Settings"
    },
    {
      "type": "video",
      "id": "video_url",
      "label": "Video URL",
      "info": "YouTube or Vimeo URL"
    },
    {
      "type": "image_picker",
      "id": "poster",
      "label": "Poster Image",
      "info": "Shown while video is loading"
    },
    {
      "type": "text",
      "id": "video_mp4",
      "label": "MP4 Video URL",
      "info": "Enter the direct URL to your uploaded MP4 file"
    }
  ],
  "presets": [
    {
      "name": "Hero Video",
      "category": "Video"
    }
  ]
}
{% endschema %}