{%- comment -%}
  Hero Section with Video Background
{%- endcomment -%}

<style>
  /* Hero Video Section */
  .hero {
    position: relative;
    width: 100%;
    height: 0;
    padding-bottom: 57.5%; /* 920px / 1600px = 0.575 or 57.5% for aspect ratio */
    overflow: hidden;
  }

  .hero__video-container {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
  }

  .hero__video {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .hero__overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.3); /* Dark overlay for better text visibility */
    display: flex;
    flex-direction: column;
    justify-content: flex-end;
    align-items: flex-start;
    padding: 4rem;
  }

  .hero__heading {
    font-family: 'Rubik', sans-serif;
    font-weight: 700;
    font-size: clamp(2rem, 5vw, 4rem);
    line-height: 1.1;
    color: #FFFFFF;
    margin-bottom: 1.5rem;
    max-width: 800px;
  }

  .hero__button {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    min-width: 140px;
    height: 48px;
    padding: 0 24px;
    font-family: 'Rubik', sans-serif;
    font-weight: 500;
    font-size: 16px;
    background-color: #FFFFFF;
    color: #000000;
    border-radius: 6px;
    text-decoration: none;
    transition: all 0.3s ease;
    margin-bottom: 2rem;
  }

  .hero__button:hover {
    background-color: #F5F5F5;
  }

  @media screen and (max-width: 768px) {
    .hero__overlay {
      padding: 2rem;
    }
    
    .hero__heading {
      font-size: clamp(1.5rem, 4vw, 3rem);
    }
  }
</style>

<!-- Hero Video Section -->
<section class="hero">
  <div class="hero__video-container">
    <!-- Video source prioritizing settings -->
    <video class="hero__video" autoplay loop muted playsinline poster="{{ section.settings.poster | img_url: 'master' }}">
      {% if section.settings.video_mp4 != blank %}
        <source src="{{ section.settings.video_mp4 }}" type="video/mp4">
      {% endif %}
      Your browser does not support the video tag.
    </video>
  </div>
  
  <div class="hero__overlay">
    <h2 class="hero__heading">{{ section.settings.heading }}</h2>
    <a href="{{ section.settings.button_link }}" class="hero__button">{{ section.settings.button_label }}</a>
  </div>
</section>

{% schema %}
{
  "name": "Hero Video",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Great things never came from comfort zones."
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button Label",
      "default": "Shop Now"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link",
      "default": "/collections/all"
    },
    {
      "type": "header",
      "content": "Video Settings"
    },
    {
      "type": "video",
      "id": "video_url",
      "label": "Video URL",
      "info": "YouTube or Vimeo URL"
    },
    {
      "type": "image_picker",
      "id": "poster",
      "label": "Poster Image",
      "info": "Shown while video is loading"
    },
    {
      "type": "text",
      "id": "video_mp4",
      "label": "MP4 Video URL",
      "info": "Enter the direct URL to your uploaded MP4 file"
    }
  ],
  "presets": [
    {
      "name": "Hero Video",
      "category": "Video"
    }
  ]
}
{% endschema %}